<Window x:Class="Reversi.Views.NewGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reversi.Views"
        mc:Ignorable="d"
        Title="Create new game" Height="200" Width="200">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <DockPanel Margin="5" Width="150">
                <TextBlock Text="Field Width" Margin="5"/>
                <TextBox Text="{Binding FieldWidth}" Margin="5"/>
            </DockPanel>
            <DockPanel Margin="5" Width="150">
                <TextBlock Text="Field Height" Margin="5"/>
                <TextBox Text="{Binding FieldHeight}" Margin="5"/>
            </DockPanel>
            <Button Margin="5" Width="70" Height="20" Command="{Binding StartGame}" Content="Start"/>
        </StackPanel>
    </Grid>
</Window>
